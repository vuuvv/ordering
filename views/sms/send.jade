extends ../layout

block content
	.container
		h1 Send SMS
		form(role="form", action="/sms/send", method="post", style="max-width: 300px")
			.form-group
				input.form-control(type='text', name='mobile', placeholder="Enter Modile")
			button.btn.btn-primary(type='submit') 发送
			&nbsp;
			a.btn.btn-default(href='/sms') 返回列表
